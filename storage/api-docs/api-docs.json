{
    "openapi": "3.0.0",
    "info": {
        "title": "Blog API",
        "description": "مستندات RESTful API پروژه بلاگ برای مصاحبه",
        "contact": {
            "email": "mohammad@example.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://my-default-host.com",
            "description": "API Server"
        }
    ],
    "paths": {
        "/api/auth/send-code": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "ارسال کد فعال‌سازی",
                "description": "ایمیل کاربر را گرفته و یک کد فعال‌سازی برای او ارسال می‌کند",
                "operationId": "820ce2b825513938a9020e44615b0707",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "test@example.com"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "کد فعال‌سازی ارسال شد"
                    },
                    "422": {
                        "description": "ورودی نامعتبر"
                    }
                }
            }
        },
        "/api/auth/check-code": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "بررسی صحت کد فعال‌سازی",
                "description": "ایمیل و کد فعال‌سازی را بررسی می‌کند و در صورت معتبر بودن توکن موقت برمی‌گرداند.",
                "operationId": "46f07268a81afde2a54c99da700d50b4",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "code"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    },
                                    "code": {
                                        "type": "string",
                                        "example": "847395"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "کد صحیح است، توکن موقت برگردانده شد"
                    },
                    "401": {
                        "description": "کد یا ایمیل نامعتبر است"
                    },
                    "422": {
                        "description": "خطای اعتبارسنجی"
                    }
                }
            }
        },
        "/api/auth/complete-register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "تکمیل ثبت‌نام کاربر پس از تأیید ایمیل",
                "description": "با دریافت نام، نام‌خانوادگی و رمز عبور، ثبت‌نام را نهایی می‌کند. توکن موقت باید همراه درخواست ارسال شود.",
                "operationId": "cc34ad3e1dba0276993516268a6d61be",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "first_name",
                                    "last_name",
                                    "password"
                                ],
                                "properties": {
                                    "first_name": {
                                        "type": "string",
                                        "example": "محمد"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "example": "جعفری"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "StrongPassword123!"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "ثبت‌نام با موفقیت انجام شد و توکن نهایی بازگردانده شد"
                    },
                    "401": {
                        "description": "توکن موقت نامعتبر یا منقضی شده"
                    },
                    "422": {
                        "description": "خطای اعتبارسنجی"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Auth"
        }
    ]
}