{
    "openapi": "3.0.0",
    "info": {
        "title": "Blog API",
        "description": "مستندات RESTful API پروژه بلاگ برای مصاحبه",
        "contact": {
            "email": "m.pourmami@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://blog-api.test",
            "description": "API Server"
        }
    ],
    "paths": {
        "/api/auth/send-code": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "ارسال کد فعال‌سازی",
                "description": "ایمیل کاربر را گرفته و یک کد فعال‌سازی برای او ارسال می‌کند",
                "operationId": "820ce2b825513938a9020e44615b0707",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "test@example.com"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "کد فعال‌سازی ارسال شد"
                    },
                    "422": {
                        "description": "ورودی نامعتبر"
                    }
                }
            }
        },
        "/api/auth/verify-code": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "بررسی صحت کد فعال‌سازی",
                "description": "ایمیل و کد فعال‌سازی را بررسی می‌کند و در صورت معتبر بودن توکن موقت برمی‌گرداند.",
                "operationId": "1e30469eafbb110a0381e46785445783",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "code"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    },
                                    "code": {
                                        "type": "string",
                                        "example": "847395"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "کد صحیح است، توکن موقت برگردانده شد"
                    },
                    "401": {
                        "description": "کد یا ایمیل نامعتبر است"
                    },
                    "422": {
                        "description": "خطای اعتبارسنجی"
                    }
                }
            }
        },
        "/api/auth/complete-register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "تکمیل ثبت‌نام با توکن موقت",
                "description": "کاربر پس از تأیید ایمیل با کد فعال‌سازی، اطلاعات ثبت‌نام کامل را وارد کرده و ثبت‌نام کامل می‌شود.",
                "operationId": "authCompleteRegister",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "first_name",
                                    "last_name",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "first_name": {
                                        "type": "string",
                                        "example": "علی"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "example": "رضایی"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "12345678"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "12345678"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "ثبت‌نام با موفقیت تکمیل شد",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "ثبت‌نام با موفقیت تکمیل شد."
                                        },
                                        "token": {
                                            "type": "string",
                                            "example": "eyJ0eXAiOiJKV1QiLCJhb..."
                                        },
                                        "user": {
                                            "properties": {
                                                "email": {
                                                    "type": "string",
                                                    "example": "test@example.com"
                                                },
                                                "first_name": {
                                                    "type": "string",
                                                    "example": "علی"
                                                },
                                                "last_name": {
                                                    "type": "string",
                                                    "example": "رضایی"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "توکن دسترسی غیرمجاز یا اشتباه"
                    },
                    "422": {
                        "description": "خطای اعتبارسنجی"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        },
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "ورود کاربر با ایمیل و رمز عبور",
                "operationId": "421cf2feefd4ce98e4cf85479ed54495",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "12345678"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "ورود موفق",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "1|abc123def456"
                                        },
                                        "user": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "example": "user@example.com"
                                                },
                                                "first_name": {
                                                    "type": "string",
                                                    "example": "علی"
                                                },
                                                "last_name": {
                                                    "type": "string",
                                                    "example": "رضایی"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "خطا در اعتبارسنجی یا اطلاعات ورود نامعتبر",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "properties": {
                                                "email": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "ایمیل یا رمز عبور اشتباه است."
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/request-reset-password": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "ارسال کد بازیابی رمز عبور",
                "operationId": "3f1328b6ef6dadf538679028a4dec251",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "کد بازیابی رمز عبور ارسال شد"
                    },
                    "422": {
                        "description": "ایمیل نامعتبر یا یافت نشد"
                    }
                }
            }
        },
        "/api/auth/reset-password": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "تنظیم رمز جدید با کد تایید",
                "operationId": "e08a13da1d76ef5182ce1e04d19fd218",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "code",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    },
                                    "code": {
                                        "type": "string",
                                        "example": "123456"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "12345678"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "12345678"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "رمز عبور با موفقیت تغییر یافت"
                    },
                    "422": {
                        "description": "کد تایید نامعتبر یا منقضی شده"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "Bearer": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Auth"
        }
    ]
}